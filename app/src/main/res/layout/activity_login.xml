<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="156dp"
        app:srcCompat="@drawable/appicon1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="248dp"
        android:layout_height="68dp"
        android:layout_marginStart="116dp"
        android:text="Welcome to Educonnect timetable app"
        android:textColor="@color/primaryWhite"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="336dp"
        android:layout_height="88dp"
        android:text="Quickly personalize your timetable, generate notes online and communicate easily!"
        android:textColor="@color/primaryWhite"
        android:textSize="20sp"
        android:textStyle="italic"
        app:textLocale="@string/lorem_ipsum"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="236dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="292dp"
        android:layout_height="74dp"
        android:background="@drawable/appbackground"
        android:backgroundTint="@color/primaryWhite"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="374dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="290dp"
        android:layout_height="68dp"
        android:background="@drawable/appbackground"
        android:backgroundTint="@color/primaryWhite"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="478dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:focusable="auto"
        android:text="Login"
        android:textColor="@color/white"
        android:textColorLink="@color/primaryGreen"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="572dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="218dp"
        android:layout_height="46dp"
        android:text="Create new account"
        android:textAlignment="center"
        android:textColor="#15891A"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="655dp" />
</androidx.constraintlayout.widget.ConstraintLayout>